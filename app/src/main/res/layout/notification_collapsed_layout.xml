<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/song_title_collapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/play_icon_collapsed"
            android:layout_toEndOf="@id/album_art_collapsed"
            android:singleLine="true"
            android:paddingStart="2dp"
            android:textColor="#000000"
            style="@style/TextAppearance.Compat.Notification.Title.Media"/>

        <ImageView
            android:id="@+id/play_icon_collapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/play_icon" />

        <ImageView
            android:id="@+id/album_art_collapsed"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
             />

    </RelativeLayout>
